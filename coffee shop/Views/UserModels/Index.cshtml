                    @Html.DisplayFor(modelItem => item.isAdmin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isBarista)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
